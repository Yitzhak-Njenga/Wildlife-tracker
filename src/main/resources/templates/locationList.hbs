{{#partial "content"}}
    {{#if locations}}
        <div class="container">
            <div class="row">
                <h3>Available locations</h3>
                <div class="container">
                    <table class="table table-dark">
                        <tbody>
                        {{#each locations}}
                            <tr>
                                <td>Id: <span></span>{{id}}</td>
                                <td>location Name: <span></span>{{name}}</td>

                            </tr>



                        {{/each}}
                        </tbody>
                    </table>


                </div>
            </div>

        </div>

    {{/if}}

{{/partial}}

{{>layout.hbs}}